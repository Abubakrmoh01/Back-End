static void Main(string[] args)
        {
            Console.WriteLine("Please Enter Number to sum, or Enter -100 to break the program and print the sum: ");
            int number = 0, result = 0;

            while (true)
            {
                number = int.Parse(Console.ReadLine());
                if (number == -100)
                    break;

                result += number;
            }

            Console.WriteLine(result == -100 ? 0 : result);
        }
